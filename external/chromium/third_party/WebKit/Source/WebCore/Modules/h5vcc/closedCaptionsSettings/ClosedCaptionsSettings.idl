    static readonly attribute float captionOpacity;
    static readonly attribute DOMString edgeStyle;
    static readonly attribute short captionSize;
    static readonly attribute DOMString fontFamily;
    static readonly attribute boolean isEnabled;
    static readonly attribute boolean useDefaultOptions;
    static readonly attribute DOMString windowColor;
    static readonly attribute float windowOpacity;
};
